# Example environment variables for user-management-service
# Copy to .env and customize. Do NOT commit your real .env.

# Server
SERVER_PORT=8082

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://user_management_postgres:5432/user_management_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Upstream services
PROJECT_SERVICE_URL=http://project-management-service:8083

# Kafka/Schema Registry
SPRING_KAFKA_BOOTSTRAP_SERVERS=broker:29092
SCHEMA_REGISTRY_URL=http://schema-registry:8081

# JWT
JWT_SECRET=change-me
JWT_HEADER=Authorization
JWT_EXPIRATION=12000000


