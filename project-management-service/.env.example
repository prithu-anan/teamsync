# Example environment variables for project-management-service
# Copy to .env and customize. Do NOT commit your real .env.

# Server
SERVER_PORT=8083

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://project_management_postgres:5432/project_management_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Upstream services
USER_SERVICE_URL=http://user-management-service:8082
TASK_SERVICE_URL=http://task-management-service:8089

# Kafka/Schema Registry
SPRING_KAFKA_BOOTSTRAP_SERVERS=broker:29092
SCHEMA_REGISTRY_URL=http://schema-registry:8081

# JWT
JWT_SECRET=change-me
JWT_HEADER=Authorization
JWT_EXPIRATION=12000000


